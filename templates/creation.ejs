<% layout('/layout/page')%>
<% block('title', 'Creation')%>

<div class="container">
    <h3 class="text-center">Create your own transformer, <%=user.get('username')%>!</h3> <br>
    <div class="row justify-content-md-center">
        <div class="col-20 col-md-auto">
            <form id="create" class="form-horizontal" action="/create">
                        <div class="form-group">
                            <label for="ownerID">Owner (enter your name):</label>
                            <input class="form-control" type="text" name="owner" id="ownerID" value="<%=user.get("username")%>">
                        </div>
                        <div class="form-group">
                            <label for="nameID">Name: </label>
                            <input class="form-control"type="text" name="name" id="nameID" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <select class="form-control">
                                <option value="Autobot">Autobot</option>
                                <option value="Decepticon">Decepticon</option>
                            </select>
                        </div>
                        <div class="form-group">
                            Home Planet:
                            <input class="form-control" type="text" name="homePlanet"/>
                        </div>
                        <div class="form-group">
                            Attack:
                            <input class="form-control" type="text" name="attack"/>
                        </div>
                        <div class="form-group">
                            Health:
                            <input class="form-control" type="text" name="health"/>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary" data-loading-text="Creating...">Create</button>
                        </div>
            </form>
        </div>
    </div>
</div>